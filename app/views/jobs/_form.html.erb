<%= form_for @job do |f| %>
    <div>
        <%= f.label :title %>
            <%= f.text_field :title, { :required => true } %>
    </div>
    <div>
        <%= f.label :description %>
            <%= f.text_area :description, size: '60x6', :required => true %>
    </div>
    <div>
        <%= f.submit %>
    </div>
    <% end %>